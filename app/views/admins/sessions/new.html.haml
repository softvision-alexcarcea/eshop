.container
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin" }) do |form|
    %h2.form-signin-heading Sign in
    = form.email_field :email, :class => "input-block-level", :placeholder => "Email address"

    = form.password_field :password, :class => "input-block-level", :placeholder => "Password"

    - if devise_mapping.rememberable?
      %label.checkbox{ :for => :remember_me }
        = form.check_box :remember_me
        Remember me

    = form.submit "Sign in", :class => "btn btn-large btn-success"

  = render "devise/shared/links"
