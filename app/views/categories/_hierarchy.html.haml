- if hierarchy.any?
  %ul.nav.nav-list
    - hierarchy.each do |category, subcategories|
      %li
        %div
          %strong= link_to category.name, category
          %span.pull-right
            - if admin_signed_in?
              - options = { :class => "btn btn-primary", :title => "Edit category" }
              = link_to "Edit", edit_category_path(category), options
              
              - options = { :class => "btn btn-success", :title => "Add Subcategory" }
              = link_to "Add Subcategory", new_category_path(:parent_id => category.id), options
              
              - options = { :class => "btn btn-danger", :method => :delete, :title => "Delete category", :confirm => "Are you sure you want to delete this category?" }
              = link_to "Delete", category, options
        
        %div
          %p= category.description
        
        = render 'hierarchy', :hierarchy => subcategories
