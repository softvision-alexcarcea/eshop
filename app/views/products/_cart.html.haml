%span.label.label-success
  %i.icon-shopping-cart.icon-white
  Shopping Cart
- if cart and cart.any?
  - total = 0
  %ul.unstyled
    - cart.each do |product, count|
      - total += product.price * count
      %li
        .row
          .span3
            - if product.assets.any?
              = image_tag product.assets[0].image.url(:thumbnail)
            %span.label.label-info= "(#{count})"
            = link_to product.name, product
          .span1
            = link_to cart_path(id: product.id), :class => "btn-mini btn-danger delete", :title => "Remove from Cart", remote: true, :method => :delete, :confirm => "Are you sure you want to remove this item from your cart?" do
              &times;
  %span.text-info= "Total: $%.2f" % total
  %span.pull-right
    %a{ :href => "#", :class => "btn btn-primary" } Buy!
- else
  %br
  %br
  %span.label.label-info 0 items
