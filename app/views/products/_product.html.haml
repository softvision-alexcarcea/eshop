%li
  .row
    .span8
      = link_to image_tag(product_default_image_url(product, :thumbnail), class: "img-rounded"), product
      %strong= link_to product.name, product
      .pull-right
        %span= "($%.2f)" % product.price
        
        - if admin_signed_in?
          - options = { :class => "btn btn-primary", :title => "Edit product" }
          = link_to "Edit", edit_product_path(product), options
          
          - options = { :class => "btn btn-danger", :method => :delete, :title => "Delete product", :confirm => "Are you sure you want to delete this product?" }
          = link_to "Delete", product, options
        - else
          - options = { :class => "btn btn-success", :title => "Add to Cart" }
          = link_to "Add to Cart", product, options
  
  - if product.description
    .row
      .span8
        %p= product.description
  
  - if product.tag_list.any?
    .row
      .span8
        %i.icon-tags
        - product.tag_list.each do |tag|
          %span.label.label-inverse= tag
          
