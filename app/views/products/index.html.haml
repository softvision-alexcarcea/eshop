.span8
  %section
    .row
      %h1 Products list
      - if @products.any?
        %ul.unstyled.products
          = render @products
        = paginate @products
      - else
        %p No products exist.
.span4
  %section
    .row
      .span4.well.cart
        = render 'cart', :cart => @cart

    .row
      .span4.well
        = render partial: 'shared/categories', locals: { categories: @categories, category_id: nil, root: true }
