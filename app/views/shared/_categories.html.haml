- if categories.any?
  %ul.nav.nav-list
    - if root
      %li{ class: category_id.nil? ? "active" : nil }= link_to "All Products", products_path
    - categories.each do |category, subcategories|
      %li{ class: ((category_id == category.id) ? "active" : nil) }
        = link_to category.name, category, title: category.description
        = render partial: 'shared/categories', locals: { categories: subcategories, category_id: category_id, root: false }
