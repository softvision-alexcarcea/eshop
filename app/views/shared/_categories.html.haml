- if categories.any?
  %ul.nav.nav-list
    - if category_id
      %li= link_to "All Products", products_path
    - else
      %li.active= link_to "All Products", products_path
    - categories.each do |category, subcategories|
      %li
        = link_to category.name, category, :title => category.description
        = render partial: 'shared/categories', categories: subcategories
